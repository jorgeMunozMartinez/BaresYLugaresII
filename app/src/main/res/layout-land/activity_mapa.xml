<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Presentacion.mapa">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <fragment
        android:id="@+id/idMapa"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="637dp"
        android:layout_height="253dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnGPSllegar"
        android:layout_width="110dp"
        android:layout_height="50dp"

        android:layout_marginEnd="76dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btngpsstyle"
        android:src="@drawable/ic_bici"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnAndando"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="87dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btngpsstyle"
        android:src="@drawable/ic_android_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnGPSllegar"
        app:layout_constraintStart_toEndOf="@+id/btnCoche" />

    <ImageButton
        android:id="@+id/btnCoche"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/btngpsstyle"
        android:src="@drawable/ic_car_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>